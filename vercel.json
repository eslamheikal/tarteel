{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "env": {
    "NODE_ENV": "production"
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/tarteel/browser"
      }
    },
    {
      "src": "api/endpoints/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth",
      "dest": "/api/endpoints/auth.endpoint.ts"
    },
    {
      "src": "/api/users",
      "dest": "/api/endpoints/users.endpoint.ts"
    },
    {
      "src": "/api/audio-recordings",
      "dest": "/api/endpoints/audio-recordings.endpoint.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    },
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  }
}